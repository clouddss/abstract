{
  "name": "abstract-pump-platform",
  "version": "1.0.0",
  "description": "Pump.fun-style token launch and trading platform for Abstract chain",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network abstract-testnet",
    "verify": "hardhat verify --network abstract-testnet",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test:e2e": "tsx scripts/e2e-test.ts",
    "test:integration": "cd backend && npm run test:seed && cd .. && npm run test:e2e",
    "test:quick": "cd backend && npm run db:reset && npm run test:seed"
  },
  "keywords": [
    "defi",
    "bonding-curve",
    "token-launch",
    "abstract",
    "ethereum"
  ],
  "author": "Abstract Pump Platform",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@types/chai": "^5.2.2",
    "cha": "^0.2.1",
    "concurrently": "^8.2.0",
    "hardhat": "^2.26.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chai": "^5.2.1",
    "chalk": "^4.1.2",
    "dotenv": "^16.3.0",
    "ethers": "^6.15.0",
    "tsx": "^4.20.4",
    "ws": "^8.14.0"
  }
}
